<% layout('../../../layouts/client/app') %>

<div class="row">
    <div class="col-md-8">
        <div class="header text-center">
            <h3 class="title">Quá trình làm việc</h3>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain" style="margin-top: 0">
                    <div class="card-content">
                        <ul class="timeline" style="margin-top: 0">
                            <li class="timeline-inverted">
                                <div class="timeline-badge danger">
                                    <i class="material-icons">card_travel</i>
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <span class="label label-danger">2015 - now</span>
                                    </div>
                                    <div class="timeline-body">
                                        <p>PHD of Stanford University.</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="timeline-badge success">
                                    <i class="material-icons">extension</i>
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <span class="label label-success">2013 - 2015</span>
                                    </div>
                                    <div class="timeline-body">
                                        <p>Attending PHD AI course at Stanford University</p>
                                    </div>
                                </div>
                            </li>
                            <li class="timeline-inverted">
                                <div class="timeline-badge info">
                                    <i class="material-icons">fingerprint</i>
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <span class="label label-info">2008 - 2013</span>
                                    </div>
                                    <div class="timeline-body">
                                        <p>Developer at Google</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="timeline-badge warning">
                                    <i class="material-icons">flight_land</i>
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <span class="label label-warning">2004 - 2008</span>
                                    </div>
                                    <div class="timeline-body">
                                        <p>Student at Stanford University</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-profile">
            <div class="card-avatar">
                <img class="img" src="<%= tutor.avatar %>" />
            </div>
            <div class="card-content">
                <h6 class="category text-gray"><%= tutor.profession %></h6>
                <h4 class="card-title"><%= tutor.name %></h4>
                <p class="description"><%= tutor.description %></p>

                <% if (tutor.status === 1) { %>
                    <a href="/tutors/<%= tutor.id %>/contact" class="btn btn-rose btn-round">Contact</a>
                <% } %>
            </div>
        </div>
    </div>
</div>
