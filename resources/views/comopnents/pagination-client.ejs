<% if (data.totalPage > 1) { %>
    <%
        let queryString = '';
        Object.keys(query).forEach((key) => {
            if (key !== 'page') {
                queryString += `${key}=${query[key]}&`;
            }
        });
    %>

    <div class="row pagination-box">
        <div class="pagination w-100 d-flex align-items-center justify-content-center">
            <div class="container">
                <div class="row align-items-center">
                    <div class="m-auto py-3">
                        <div class="d-flex align-items-center">
                            <% if (data.page > 1) { %>
                                <div>
                                    <a href="?<%= queryString %>page=<%= data.page - 1 %>" class="transition">
                                        <i class="flaticon-left-angle-bracket cl-main"></i>
                                    </a>
                                </div>
                            <% } %>

                            <div class="d-flex ml-5 mr-5 align-items-center">
                                <% if (data.page > 1) { %>
                                    <a href="?<%= queryString %>page=<%= data.page - 1 %>" class="page-item ml-4 mr-4 transition font-size-15 d-flex align-items-center justify-content-center">
                                        <%= data.page - 1 %>
                                    </a>
                                <% } %>

                                <a href="#" class="page-item ml-4 mr-4 transition font-size-15 d-flex align-items-center page-item-current justify-content-center"><%= data.page %></a>

                                <% if (data.totalPage - data.page > 0) { %>
                                    <a href="?<%= queryString %>page=<%= data.page + 1 %>" class="page-item ml-4 mr-4 transition font-size-15 d-flex align-items-center justify-content-center"><%= data.page + 1 %></a>
                                <% } %>
                            </div>

                            <% if (data.totalPage - data.page > 0) { %>
                                <div>
                                    <a href="?<%= queryString %>page=<%= data.page + 1 %>" class="">
                                        <i class="flaticon-play-symbol cl-main"></i>
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>
